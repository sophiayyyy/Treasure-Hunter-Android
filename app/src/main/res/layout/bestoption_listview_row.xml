<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_space"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_gravity="top|bottom"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@drawable/treasure_hunter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/btn_padding_space">


                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/itemSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From TreasureHunter"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>


            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="itemDescription"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/itemLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:text="www.treasurehunter.com" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>