<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_gravity="top|bottom"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/treasure_hunter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingLeft="@dimen/btn_padding_space"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="price"
                android:paddingRight="@dimen/btn_padding_space"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/itemSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="From TreasureHunter"
                android:textSize="16sp"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tvEpisodeDescription"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/itemLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="www.treasurehunter.com"
            android:textSize="12sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_weight="0.8"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical" />
</LinearLayout>